    if(noOfPegs == 0)
    return;
    
    computerTowerHanoiHelper(A, noOfPegs-1, src, dest, middle);
    size_t value = A.at(src).top();
    A.at(src).pop();
    cout << "Moving a peg of value "<< value << " from tower "<<src<<" to tower "<< dest<<endl;
    A.at(dest).push(value);
    computerTowerHanoiHelper(A, noOfPegs-1, middle, src, dest);
    return;
}
